FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/agents/code-agent/package*.json ./apps/agents/code-agent/
COPY apps/shared/package*.json ./apps/shared/

# Install dependencies
RUN npm install

# Copy source code
COPY apps/agents/code-agent ./apps/agents/code-agent
COPY apps/shared ./apps/shared
COPY tsconfig.base.json ./

WORKDIR /app/apps/agents/code-agent

EXPOSE 3004

CMD ["npm", "run", "dev"]
