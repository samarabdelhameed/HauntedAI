FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/agents/orchestrator/package*.json ./apps/agents/orchestrator/
COPY apps/shared/package*.json ./apps/shared/

# Install dependencies
RUN npm install

# Copy source code
COPY apps/agents/orchestrator ./apps/agents/orchestrator
COPY apps/shared ./apps/shared
COPY tsconfig.base.json ./

WORKDIR /app/apps/agents/orchestrator

CMD ["npm", "run", "dev"]
