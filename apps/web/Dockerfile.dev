FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/web/package*.json ./apps/web/
COPY apps/shared/package*.json ./apps/shared/

# Install dependencies
RUN npm install

# Copy source code
COPY apps/web ./apps/web
COPY apps/shared ./apps/shared
COPY tsconfig.base.json ./

WORKDIR /app/apps/web

EXPOSE 3000

CMD ["npm", "run", "dev"]
