// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  did           String   @unique
  username      String   @unique @db.VarChar(50)
  walletAddress String?  @unique @map("wallet_address") @db.Char(42)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  rooms     Room[]
  tokenTxs  TokenTransaction[]
  badges    Badge[]

  @@index([did])
  @@index([walletAddress])
  @@map("users")
}

model Room {
  id        String     @id @default(uuid())
  ownerId   String     @map("owner_id")
  status    RoomStatus @default(idle)
  inputText String     @map("input_text") @db.Text
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  owner  User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  assets Asset[]

  @@index([ownerId])
  @@index([status])
  @@map("rooms")
}

enum RoomStatus {
  idle
  running
  done
  error
}

model Asset {
  id        String    @id @default(uuid())
  roomId    String    @map("room_id")
  agentType AgentType @map("agent_type")
  cid       String    @db.VarChar(100)
  fileType  String?   @map("file_type") @db.VarChar(20)
  fileSize  BigInt?   @map("file_size")
  metadata  Json?
  createdAt DateTime  @default(now()) @map("created_at")

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([cid])
  @@index([agentType])
  @@map("assets")
}

enum AgentType {
  story
  asset
  code
  deploy
}

model TokenTransaction {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  amount    BigInt
  reason    String?  @db.VarChar(100)
  txHash    String?  @map("tx_hash") @db.Char(66)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([txHash])
  @@map("token_tx")
}

model Badge {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  tokenId   BigInt   @map("token_id")
  badgeType String   @map("badge_type") @db.VarChar(50)
  txHash    String?  @map("tx_hash") @db.Char(66)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenId])
  @@map("badges")
}
